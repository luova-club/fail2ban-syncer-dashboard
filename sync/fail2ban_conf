# Create the Discord Webhook in: Server settings -> Webhooks -> Create Webhooks

[Definition]

#
actioncheck =

webhook = 

# Notify on Banned 
actionban = curl -X POST "<webhook>/ban" \
            -H "Content-Type: application/json" \
            -d '{"ip":"<ip>"}'

# Notify on Unbanned
actionunban = curl -X POST "<webhook>/unban" \
            -H "Content-Type: application/json" \
            -d '{"ip":"<ip>"}'
[Init]

# Name of the jail in your jail.local file. default = [your-jail-name]
name = default
